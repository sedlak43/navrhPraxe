{% extends 'base.html.twig' %}

{% block title %}Zájezdy - CK VŠPJ{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        main {
            padding-top: 76px;
        }

        /* Make all cards have the same height */
        .card {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .card-body {
            flex-grow: 1;
        }

        .card-img-top {
            object-fit: cover;
            height: 200px; /* Adjust image height as needed */
        }

        /* Form group styling */
        .form-group {
            flex: 1; /* Allow form groups to grow */
            min-width: 150px; /* Minimum width of form groups */
            display: flex;
            flex-direction: column;
        }

        /* Ensure form controls have a fixed width */
        .form-group select,
        .form-group input {
            width: 220px; /* Fixed width for all controls */
        }

        /* Adjustments for mobile view */
        @media (max-width: 768px) {
            /* Stack the cards one below the other */
            .row-cols-md-3 {
                grid-template-columns: 1fr !important;
            }

            /* Make the image full width and responsive */
            .card-img-top {
                width: 100%;
                height: auto; /* Adjust the image to auto height */
            }

            /* Adjust text and layout for mobile */
            .card-body {
                padding: 1rem;
                text-align: center; /* Center-align the content for a mobile-friendly look */
            }

            .col-md-4 {
                width: 100%;
                margin-bottom: 20px; /* Add some space between cards */
            }

            /* Full-width buttons on mobile */
            .btn-group .btn {
                width: 100%;
            }

            /* Make form controls take full width on mobile */
            .form-group select,
            .form-group input {
                width: 100%;
            }
        }

        /* Further adjustments for smaller screens */
        @media (max-width: 576px) {
            .form-group select,
            .form-group input {
                width: 100%; /* Full width on smaller devices */
            }

            .btn-group .btn {
                width: 100%; /* Full-width button on smaller devices */
            }

            .row-cols-md-3 {
                grid-template-columns: 1fr !important;
            }
        }
    </style>
{% endblock %}

{% block main %}
    <!-- Hero Section with Background Image and Text -->
    <section class="hero py-5" style="background-image: url('{{ asset('images/defaultE.png') }}'); background-size: cover; background-position: center;">
        <div class="hero-content">
            <h1 class="display-4">Zájezdy</h1>
        </div>

        <div class="hero-form-container">
            <form method="get" action="{{ path('zajezdy_list') }}" class="filter-form" style="display: flex; flex-wrap: wrap; gap: 1rem; width: 100%;" >
                <div class="form-group">
                    <select id="destinace" name="destinace" class="form-select" onchange="this.form.submit()">
                        <option value="" {% if selected_destinace is empty %}selected{% endif %}>Destinace</option>
                        {% for destinace in destinaces %}
                            <option value="{{ destinace }}" {% if selected_destinace == destinace %}selected{% endif %}>
                                {{ destinace }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <select id="doprava" name="doprava" class="form-select" onchange="this.form.submit()">
                        <option value="" {% if selected_doprava is empty %}selected{% endif %}>Doprava</option>
                        {% for doprava in dopravas %}
                            <option value="{{ doprava }}" {% if selected_doprava == doprava %}selected{% endif %}>
                                {{ doprava }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <select id="typ" name="typ" class="form-select" onchange="this.form.submit()">
                        <option value="" {% if selected_typ is empty %}selected{% endif %}>Typy</option>
                        {% for type in types %}
                            <option value="{{ type }}" {% if selected_typ == type %}selected{% endif %}>
                                {{ type }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Date Picker -->
                <div class="form-group" id="datePickerContainer">
                    <input type="month" class="form-control" id="datePicker" name="date" aria-label="Datum" value="{{ selected_date }}" onchange="this.form.submit()">
                </div>

            </form>
        </div>
    </section>

    <div class="container my-4">
        <div class="row">
            <div class="col-md-12">
                <div class="album py-5 bg-body-tertiary">
                    <div class="container">
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                            {% for zajezd in zajezdy %}
                                <div class="col-md-4">
                                    <div class="card shadow-sm">
                                        <img src="{{ asset('uploads/zajezdy/' ~ zajezd.carouselImage2) }}" class="card-img-top" alt="Travel Image">

                                        <div class="card-body" >
                                            <h4>{{ zajezd.nazev }}</h4>
                                            <h5>
                                                {% if zajezd.typ == 'Zájezdový pobyt' %}
                                                    <h5>Od {{ zajezd.formattedCena }} Kč</h5>
                                                {% else %}
                                                    <h5>{{ zajezd.formattedCena }} Kč</h5>
                                                {% endif %}
                                            </h5>

                                            <hr>

                                            <div>
                                                <div class="mb-2">
                                                    <i class="bi bi-calendar"></i>
                                                    {% for datum in zajezd.datumy %}
                                                        <span>{{ datum.datum|date('d.m.Y') }}</span>{% if not loop.last %}, {% endif %}
                                                    {% else %}
                                                        <span>Není k dispozici</span>
                                                    {% endfor %}
                                                </div>

                                                <div class="mb-2">
                                                    <i class="bi bi-bus-front"></i>
                                                    <span>{{ zajezd.doprava }}</span>
                                                </div>
                                                <div class="mb-2">
                                                    <i class="bi bi-egg-fried"></i>
                                                    <span>{{ zajezd.strava }}</span>
                                                </div>
                                                <div class="mb-2">
                                                    <i class="bi bi-tag"></i>
                                                    <span>{{ zajezd.typ }}</span>
                                                </div>
                                            </div>

                                            <div class="d-flex justify-content-center align-items-center mt-3">
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-primary" onclick="window.location.href='{{ path('zajezd_show', {nazev: zajezd.nazev | replace({' ': '-'}) }) }}'">Více zde</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

